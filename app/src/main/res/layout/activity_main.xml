<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/mainView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.cdmunoz.screenshotapp.ScreenshotActivity"
    >

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="0dp"
      android:layout_height="56dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:background="@color/colorPrimary"
      android:titleTextColor="@android:color/white"
      />


  <TextView
      android:id="@+id/textViewTakePicture"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/take_screenshot"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      />
  <ImageView
      android:id="@+id/imageViewCamera"
      android:layout_width="50dp"
      android:layout_height="50dp"
      app:srcCompat="@drawable/ic_camera_view"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/textViewTakePicture"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginBottom="8dp"
      />
  <ImageView
      android:id="@+id/imageView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:scaleType="fitCenter"
      app:srcCompat="@mipmap/ic_launcher_round"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/imageViewCamera"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="0dp"
      />
  <ImageView
      android:id="@+id/imageViewTrash"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_trash"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="16dp"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_bias="0.976"
      />
</android.support.constraint.ConstraintLayout>
